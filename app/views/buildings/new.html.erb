<% if @building.errors.any? %>
  <%= flash[:error] %>
<% end %>
<%= simple_form_for @building do |f| %>
  <%= f.input :street_address, label: "Street Address" %>
  <%= f.input :city %>
  <%= f.input :state, collection: Building.state_array %>
  <%= f.input :postal_code, label: "Postal Code" %>
  <%= f.input :description, as: :text %>
  <%= f.input :owner_id, collection: Building.owners %>
  <%= f.button :submit %>
<% end %>